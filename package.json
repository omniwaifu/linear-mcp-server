{
  "name": "linear-mcp-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for the Linear API.",
  "type": "module",
  "bin": {
    "linear-mcp-server": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "lint": "eslint index.ts",
    "lint:fix": "eslint index.ts --fix",
    "format": "prettier --write index.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@linear/sdk": "^33.0.0",
    "@modelcontextprotocol/sdk": "^1.0.3",
    "dotenv": "^16.4.6",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/node": "^20.17.9",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/modelcontextprotocol/linear-server.git"
  },
  "keywords": [
    "linear",
    "mcp",
    "model context protocol",
    "api",
    "server"
  ],
  "author": "Model Context Protocol",
  "license": "MIT"
}
